<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffffff"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:background="@color/channel_item_background"
        android:visibility="visible" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:background="@color/channel_item_background"
            android:orientation="horizontal"
            android:visibility="visible" >

            <TextView
                android:id="@+id/tv_xuexiao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_flat_round_left_pressed"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingLeft="21dp"
                android:paddingRight="19dp"
                android:paddingTop="5dp"
                android:text="学校"
                android:textColor="@color/channel_item_background"
                android:textSize="13dip"
                android:visibility="visible" />

            <TextView
                android:id="@+id/tv_xueyuan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="-1px"
                android:background="@drawable/shape_flat_round_right_nor"
                android:gravity="center"
                android:paddingBottom="5dp"
                android:paddingLeft="19dp"
                android:paddingRight="21dp"
                android:paddingTop="5dp"
                android:text="学院"
                android:textColor="#ffffffff"
                android:textSize="13dip"
                android:visibility="visible" />
        </LinearLayout>

        <ImageButton
            android:id="@+id/ib_plus"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/ic_plus"
            android:visibility="gone" />
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/mViewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>