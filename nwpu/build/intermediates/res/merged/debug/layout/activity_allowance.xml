<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.zyw.nwpu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zyw.nwpu.appcenter.Allowance" >

    <com.zyw.nwpu.base.TitleBar
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:actionType="none"
        app:isShowBackButton="true"
        app:titleText="奖助查询" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/subscribe_activity_bg" >

        <EditText
            android:id="@+id/et_allowancename_login"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="#ffffffff"
            android:gravity="start|center_vertical"
            android:hint="姓名"
            android:inputType="text"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:singleLine="true"
            android:textColor="#ff444444"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_allowancepwd_login"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/et_allowancename_login"
            android:layout_marginTop="20dp"
            android:background="#ffffffff"
            android:ems="10"
            android:gravity="start|center_vertical"
            android:hint="密码(学号)"
            android:inputType="textPassword"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:singleLine="true"
            android:textColor="#ff444444"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_allowancepwd_login"
            android:layout_marginTop="80dp"
            android:orientation="horizontal"
            android:weightSum="2" >

            <Button
                android:id="@+id/btn_allowance_login"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:layout_weight="1"
                android:background="@drawable/btn_login"
                android:padding="10dp"
                android:text="登录"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>

        <EditText
            android:id="@+id/time"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/et_allowancepwd_login"
            android:layout_marginTop="22dp"
            android:background="#ffffffff"
            android:ems="10"
            android:gravity="start|center_vertical"
            android:hint="要查询的年月，eg:201601"
            android:inputType="text"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:singleLine="true"
            android:textColor="#ff444444"
            android:textSize="18sp" />
    </RelativeLayout>

</LinearLayout>