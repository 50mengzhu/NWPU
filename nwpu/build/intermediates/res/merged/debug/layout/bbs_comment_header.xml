<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffffff"
    android:orientation="vertical"
    android:paddingTop="4dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffffffff"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/rl_headbar_cmt_hd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="10dp"
            android:paddingLeft="14dp"
            android:paddingRight="14dp" >

            <ImageView
                android:id="@+id/iv_headImg_cmt_hd"
                android:layout_width="@dimen/avatar_size_small"
                android:layout_height="@dimen/avatar_size_small"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="10dp"
                android:contentDescription="headImg"
                android:src="@drawable/default_round_head" />

            <TextView
                android:id="@+id/tv_creatorName_cmt_hd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/iv_headImg_cmt_hd"
                android:textColor="#ff000000"
                android:textSize="15sp" />

            <ImageView
                android:id="@+id/iv_creatorGender_cmt_hd"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_alignBottom="@+id/tv_creatorName_cmt_hd"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@+id/tv_creatorName_cmt_hd"
                android:contentDescription="creatorgender_hd" />

            <TextView
                android:id="@+id/tv_schoolname_cmt_hd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/iv_headImg_cmt_hd"
                android:layout_toRightOf="@+id/iv_headImg_cmt_hd"
                android:textColor="#ff444444"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/tv_time_cmt_hd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:textColor="#ff444444"
                android:textSize="12sp"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/iv_downbtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/selector_bbs_dowbtn"
                android:maxHeight="20dp"
                android:maxWidth="2dp"
                android:padding="7dp"
                android:src="@drawable/age_classification_arrows_down"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/tv_txt_cmt_hd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:autoLink="all"
                android:clickable="false"
                android:gravity="center_vertical"
                android:lineSpacingMultiplier="1.3"
                android:linksClickable="true"
                android:textColor="#ff000000"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/iv_img_cmt_hd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_txt_cmt_hd"
                android:layout_margin="10dp"
                android:contentDescription="pic"
                android:maxHeight="200dp"
                android:maxWidth="160dp"
                android:scaleType="fitXY"
                android:visibility="visible" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:weightSum="5" >

            <LinearLayout
                android:id="@+id/ll_position"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="3"
                android:gravity="left"
                android:minHeight="20dp"
                android:minWidth="50dp"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginRight="3dp"
                    android:src="@drawable/ic_position" />

                <TextView
                    android:id="@+id/tv_position"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:textColor="#ff666666"
                    android:textSize="12sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_like_cmt_hd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:minWidth="50dp"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:paddingTop="5dp" >

                <ImageView
                    android:id="@+id/iv_like_cmt_hd"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="3dp"
                    android:contentDescription="creatorimg_cmt_hd"
                    android:src="@drawable/ic_action_like_normal" />

                <TextView
                    android:id="@+id/tv_like_cmt_hd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff000000"
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:minWidth="50dp"
                android:orientation="horizontal"
                android:paddingBottom="5dp"
                android:paddingTop="5dp" >

                <ImageView
                    android:id="@+id/iv_comment_cmt_hd"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginRight="3dp"
                    android:contentDescription="commentimg"
                    android:src="@drawable/ic_action_comment" />

                <TextView
                    android:id="@+id/tv_comment_cmt_hd"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#ff000000"
                    android:textSize="17sp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:baselineAligned="false"
            android:orientation="horizontal"
            android:paddingLeft="14dp"
            android:paddingRight="14dp" >

            <TextView
                android:id="@+id/tv_likerlist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:singleLine="false"
                android:textColor="@color/evendarkergray"
                android:textSize="14sp" />
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#ffdddddd"
        android:paddingBottom="5dp"
        android:paddingLeft="10dp"
        android:paddingTop="5dp"
        android:text="最新评论"
        android:textColor="#ff444444"
        android:textSize="12sp" />

</LinearLayout>