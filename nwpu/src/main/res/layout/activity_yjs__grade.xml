<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.zyw.nwpu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/channel_item_background_dark"
    android:orientation="vertical"
    tools:context="com.zyw.nwpu.GraduateGrade" >

    <com.zyw.nwpu.base.TitleBar
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:actionType="none"
        app:isShowBackButton="true"
        app:titleText="研究生成绩查询" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/subscribe_activity_bg" >

        <EditText
            android:id="@+id/et_yjsschoolnum_login"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="#ffffffff"
            android:gravity="left|center_vertical"
            android:hint="学号/工号"
            android:inputType="number"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:singleLine="true"
            android:textColor="#ff444444"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_yjspassword_login"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_yjsschoolnum_login"
            android:layout_marginTop="30dp"
            android:background="#ffffffff"
            android:gravity="left|center_vertical"
            android:hint="密码"
            android:inputType="textPassword"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:singleLine="true"
            android:textColor="#ff444444"
            android:textSize="18sp" />

        <LinearLayout
            android:id="@+id/linearLayout1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/et_yjspassword_login"
            android:layout_marginTop="80dp"
            android:orientation="horizontal"
            android:weightSum="2" >

            <Button
                android:id="@+id/btn_undergraduategrade_login"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="60dp"
                android:layout_marginRight="60dp"
                android:layout_weight="1"
                android:background="@drawable/btn_login"
                android:padding="10dp"
                android:text="登录"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="6dp"
            android:text="@string/tip"
            android:textColor="#ff888888"
            android:textSize="14sp" />
    </RelativeLayout>

</LinearLayout>