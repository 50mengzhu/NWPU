<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res/com.zyw.nwpu"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.zyw.nwpu.appcenter.Allowance" >

    <com.zyw.nwpu.base.TitleBar
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:actionText="确定"
        app:actionType="single"
        app:isShowBackButton="true"
        app:titleText="设置" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/subscribe_activity_bg"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/et_yaoqingren"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="#ffffffff"
            android:gravity="start|center_vertical"
            android:hint="邀请人学号(可为空)"
            android:inputType="text"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:singleLine="true"
            android:textColor="#ff444444"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/et_phone"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/et_allowancename_login"
            android:layout_marginTop="20dp"
            android:background="#ffffffff"
            android:gravity="start|center_vertical"
            android:hint="手机号(用于赠送礼物时联系)"
            android:inputType="phone"
            android:paddingBottom="10dp"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:paddingTop="10dp"
            android:singleLine="true"
            android:textColor="#ff444444"
            android:textSize="18sp" />
    </LinearLayout>

</LinearLayout>