<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/dark_transparent" >

    <LinearLayout
        android:id="@+id/ll_menu"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_margin="20dp"
        android:background="@drawable/shape_popupwindow"
        android:orientation="vertical" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:drawableLeft="@drawable/ic_screen_rotation_grey600_24dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/setting_shake"
            android:textColor="@color/gray"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:padding="8dp"
            android:text="在 设置 - 摇一摇 中可以对摇一摇功能进行定制。"
            android:textColor="@color/lighter_gray"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal"
            android:weightSum="3" >

            <TextView
                android:id="@+id/tv_publish"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/left_drawer_item_bg"
                android:gravity="center"
                android:padding="8dp"
                android:text="发帖子"
                android:textColor="@color/channel_item_background"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tv_sign"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/left_drawer_item_bg"
                android:gravity="center"
                android:padding="8dp"
                android:text="签到"
                android:textColor="@color/channel_item_background"
                android:textSize="16sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tv_feedback"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@drawable/left_drawer_item_bg"
                android:gravity="center"
                android:padding="8dp"
                android:text="写反馈"
                android:textColor="@color/channel_item_background"
                android:textSize="16sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>